#include <stdio.h>
#include <string.h>
#include <ctype.h>

#define MAX_WORDS 100
#define MAX_LEN 50

// Structure to store each word and its count
struct WordCount {
    char word[MAX_LEN];
    int count;
};

int main() {
    char text[500];
    struct WordCount words[MAX_WORDS];
    int wordCount = 0;

    printf("Enter text: ");
    fgets(text, sizeof(text), stdin);

    // Convert punctuation to spaces for easy splitting
    for (int i = 0; text[i] != '\0'; i++) {
        if (ispunct(text[i])) {
            text[i] = ' ';
        }
    }

    // Tokenize the text into words
    char *token = strtok(text, " \t\n");
    
    while (token != NULL) {
        // Convert token to lowercase
        for (int i = 0; token[i]; i++) {
            token[i] = tolower(token[i]);
        }

        // Check if word already exists in our array
        int found = 0;
        for (int i = 0; i < wordCount; i++) {
            if (strcmp(words[i].word, token) == 0) {
                words[i].count++;
                found = 1;
                break;
            }
        }

        // If the word is new, add it
        if (!found && wordCount < MAX_WORDS) {
            strcpy(words[wordCount].word, token);
            words[wordCount].count = 1;
            wordCount++;
        }

        token = strtok(NULL, " \t\n");
    }

    // Print results
    printf("\nWord Occurrences:\n");
    for (int i = 0; i < wordCount; i++) {
        printf("%s : %d\n", words[i].word, words[i].count);
    }

    return 0;
}
